{
  "deno.enable": true,
  // This just determines which paths should have Deno LSP enabled
  "deno.enablePaths": ["./client/deno.jsonc", "./client/vitest.config.ts"],
  "biome.configurationPath": "./client/biome.jsonc",
  "biome.requireConfiguration": true,
  "biome.lsp.bin": "./client/node_modules/@biomejs/biome/bin/biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  }
}
