{
  "nodeModulesDir": "auto",

  "imports": {
    "~/": "./",
    "@std/expect": "jsr:@std/expect@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.13"
  },

  "tasks": {
    // Starts Next JS with the port specified in the environment variables
    "dev": "deno run -A npm:next dev --turbo -p $(cat .env.local | grep -E '^PORT=' | sed -r 's/^PORT=([0-9]+).*/\\1/')",
    "build": "deno run -A npm:next build --turbo",
    "start": "next start",
    "db:push": "deno run --allow-all --unstable-node-conditions=react-server npm:drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:studio": "deno run --allow-all --unstable-node-conditions=react-server npm:drizzle-kit studio"
  },

  "lint": {
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["**/*.d.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": [
        "no-window",
        "no-window-prefix",
        "no-process-global",
        "no-explicit-any"
      ]
    }
  },

  "fmt": {
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["**/*.d.ts"],
    "lineWidth": 120
  },

  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ],
    "jsx": "react-jsx"
  },

  // unsafe-proto is required for building Next JS projects for now, because they still rely on __proto__.
  // For more, see https://github.com/denoland/docs/pull/1255.
  "unstable": ["unsafe-proto", "sloppy-imports"]
}
